{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "transit": {
      "dependsOn": ["^transit"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build", "check-types"]
    },
    "generate": {
      "dependsOn": ["^generate", "check-types"]
    },
    "preview": {
      "dependsOn": ["^transit"],
      "cache": false,
      "persistent": true
    },
    "preview:build": {
      "dependsOn": ["^transit"],
      "cache": false,
      "persistent": true
    },
    "preview:generate": {
      "dependsOn": ["^transit"],
      "cache": false,
      "persistent": true
    },
    "check-types": {
      "dependsOn": ["^transit"]
    },
    "//#root:lint": { },
    "//#root:lint:fix": { }

  }
}
